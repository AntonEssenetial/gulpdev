include ../../helpers/variables
include ../injected/injected

include ../head/head
include ../scripts/scripts

include ../pages/pages
include ../icon/icon
include ../label/label
include ../select/select
include ../empty/empty


mixin page(data) 
    body.page&attributes(attributes)
      
      +injected: block

      .page__wrapper

        //- Header
        <!-- Header -->
        +if('header')
          +use('header')
        
        <!-- Main -->
        main.main


          +pages(pages.default)
          


        //- Footer
        <!-- Footer -->
        +if('footer')
          +use('footer')
  
        //- Notification
        +if('module__notification')
          +use('module__notification')

      <!-- Scripts -->
      +scripts()