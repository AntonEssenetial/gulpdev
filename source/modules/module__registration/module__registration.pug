//- Recovery Popup
mixin module__recovery(data)
  - var bemClass = 'module__registration'
  <!-- module__registration -->  
  .module__registration&attributes(attributes)
    div(class=bemClass + '__wrap')
      span(class=bemClass + '__sp') Recovery
      div(class=bemClass + '__row')
        label().form__label
          +label({
            name: ''
          })(placeholder='Email' )
      p Fill out the form below, indicating your E-mail in the open window. E-mail should be the one that is linked to your personal account. After submitting the form, you will receive instructions on the specified E-mail address, in which you will be asked to confirm the legitimacy of the request, and after that you will receive a new temporary password to log into your account.
      div(class=bemClass + '__cap')
        img(class=bemClass + '__img' src=config.path.images + '/recaptcha/recaptcha.png' alt='')
      button.btn Send
  <!-- end of module__registration -->