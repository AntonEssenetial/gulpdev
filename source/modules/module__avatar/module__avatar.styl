.module__avatar
  width 100px 
  height @width
  position: relative
  
  &__link 
  &__wrap
    position: relative
    width 100% 
    height 100%
    border-radius(50%)
    
  &_file
    width 100%
    height 100%
    border-radius(50%)
    position: absolute
    top 0px 
    left 0px
    opacity: 0
    z-index: 1
    cursor pointer
    
  &_input:hover &__wrap 
    background-image radial-gradient(circle at 50% 50%, $white, #efefef)
    
  &_input:hover &__img 
  &_input:hover &__default
    opacity: 0      
    
  &__default
    background: $mango
    display flex
    border-radius(50%)
    width 100%
    height 100%
    trs()
    font-family "Roboto"
  
  span 
    margin auto
    color white
    font-size 22px 
    font-weight 500

  &__img 
    border-radius(50%)
    display: block
    width 100%
    height auto
    trs()
    position: relative
    z-index: 1

  &_xs 
    width 28px 
    height @width 
    span 
      font-size 13px
    
  &_md 
    width 32px 
    height @width 
    span 
      font-size 13px
    
  &_lg 
    width 38px 
    height @width
    span 
      font-size 13px
      
  &_input
    display flex
    &:before 
      position: absolute
      font-size 25px
      color $blue-grey
      top: 37px;
      left: 41px;
  
  &_input:hover:before 
    z-index: 1
  &_input:hover &_file 
    z-index: 2